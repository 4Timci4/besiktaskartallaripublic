# Supabase için gerekli ortam değişkenleri
VITE_SUPABASE_URL="your-supabase-url"
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"
VITE_SUPABASE_SERVICE_KEY="your-supabase-service-key"

# Google Maps API Key
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Uygulama Yapılandırma
VITE_APP_BASE_URL="http://localhost:5173" # Geliştirme ortamı için
# VITE_APP_BASE_URL="https://your-production-domain.com" # Üretim ortamı için

# Backend API URL - Express sunucusunun tam adresi
VITE_API_BASE_URL="http://localhost:3001" # Geliştirme ortamı için
# VITE_API_BASE_URL="https://your-production-domain.com" # Üretim ortamı için

# Bakım modu - true olarak ayarlandığında tüm site bakım sayfasına yönlendirilir
VITE_MAINTENANCE_MODE=false

# API Ayarları
PORT=3001 
CORS_ORIGIN="http://localhost:5173" # Geliştirme ortamı için
# CORS_ORIGIN="https://your-production-domain.com,https://www.your-production-domain.com" # Üretim ortamı için
NODE_ENV="development" # Geliştirme ortamı için "development", üretim ortamı için "production"

# E-posta gönderimi için SMTP ayarları
EMAIL_HOST="smtp.example.com"
EMAIL_PORT="587"
EMAIL_SECURE="false" # true: 465 portu için, false: diğer portlar için
EMAIL_USER="your-email@example.com"
EMAIL_PASSWORD="your-email-password"
EMAIL_FROM_NAME="Beşiktaş Kartalları Derneği"
EMAIL_FROM_ADDRESS="info@example.com"
